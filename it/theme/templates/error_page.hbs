<div class="stripe-maincolor stripe-content" style="padding-bottom:30px">
    <div class="container">
        <h1>{{t 'oops'}} !</h1>
        {{search submit=false}}
    </div>
</div>
<br/>
<div align="center">
<img src="//p3.zdassets.com/hc/theme_assets/707950/115000157885/Skycabhr_error_icon.svg" width="30%" />
</div>
<div class="error-page" style="text-align:center;">

  {{#is error 'unauthorized'}}
    <h2>{{link 'sign_in'}}</h2>
  {{/is}}

  {{#is error 'forbidden'}}
    <h2>{{t 'not_authorized'}}</h2>
  {{/is}}

  {{#is error 'not_found'}}
    <h2>{{t 'nonexistent_page'}}</h2>
    <p>{{t 'mistyped_address_or_moved_page'}}</p>
  {{/is}}

  {{#link 'help_center' class="arrow-link"}}
    {{t 'back_to_homepage'}}
  {{/link}}
</div>
